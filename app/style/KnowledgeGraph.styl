.knowledge-graph
  width 100%
  height 100%
  display flex
  .diagram
    flex 1 0 auto
    height 100%
    display flex
    justify-content center
    align-items center
    position relative
    .graph-svg
      width 100%
      height 100%
    .tooltip
      width 140px
      height 200px
      position absolute
      top 20px
      left 20px
      border-radius 5px
      background lightyellow
      opacity 0
      border solid 1px gray
      box-shadow black 0 1px 3px 0
  .tools
    width 30px
    display flex
    flex-direction column
    justify-content flex-end
    align-items center
    .reset, .zoom-in, .zoom-out
      margin-top 20px
      height 25px
      width 25px
      cursor pointer
