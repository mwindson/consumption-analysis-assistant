.knowledge-graph
  width 100%
  height 100%
  display flex
  .diagram
    flex 1 0 auto
    height 100%
    display flex
    justify-content center
    align-items center
    .graph-svg
      width 100%
      height 100%
  .tools
    width 30px
    display flex
    flex-direction column
    justify-content flex-end
    align-items center
    .reset, .zoom-in, .zoom-out
      margin-top 20px
      height 25px
      width 25px
      cursor pointer
