.knowledge-graph
  width 100%
  height 99%
  display flex
  position relative

  .diagram
    flex 1 0 auto
    height 100%
    display flex
    justify-content center
    align-items center
    position relative

    .graph-svg
      width 100%
      height 100%

    .tooltip
      top 0
      left 0
      width 243px
      min-height 146px
      position absolute
      border-radius 2px
      padding 18px
      background rgba(64, 64, 64, 0.8)
      font-size 14px
      color white
      opacity 0
      pointer-events none
      z-index 2

  .tools
    width 40px
    display flex
    flex-direction column
    justify-content flex-end
    align-items center
    position absolute
    right 0
    bottom 0

    .reset, .zoom-in, .zoom-out
      margin-top 20px
      height 25px
      width 25px
      cursor pointer
  .mode-button
    position absolute
    top 10px
    left 10px
    > button
      background-color rgb(68, 199, 103)
      border 1px solid rgb(24, 171, 41)
      display flex
      align-items center
      cursor pointer
      color rgb(255, 255, 255)
      font-family Arial
      font-size 12px
      padding 4px 7px
      text-decoration none
      text-shadow rgb(47, 102, 39) 0px -1px 0px
      transition all 0.5s
      position relative
      overflow hidden
      span
        cursor pointer
        display inline-block
        position relative
        transition 0.5s
      svg
        opacity 0
        top 0
        left -20px
        position absolute
        transition all 0.5s
      &:hover
        span
          padding-left 13px
        svg
          opacity 1
          left 0
