.knowledge-graph
  width 100%
  height 100%
  display flex
  .diagram
    flex 1 0 auto
    height 100%
    display flex
    justify-content center
    align-items center
    position relative
    .graph-svg
      width 100%
      height 100%
    .tooltip
      width 243px
      height 146px
      position absolute
      border-radius 2px
      padding 18px
      background rgba(64, 64, 64, 0.8)
      font-size 14px
      color white
      opacity 0
      pointer-events none
      z-index 2
  .tools
    width 30px
    display flex
    flex-direction column
    justify-content flex-end
    align-items center
    .reset, .zoom-in, .zoom-out
      margin-top 20px
      height 25px
      width 25px
      cursor pointer
