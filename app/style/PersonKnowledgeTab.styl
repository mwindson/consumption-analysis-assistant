.person-cards
  padding 30px 30px 30px 50px
  border-bottom solid #DDDDDD 1px
  position relative
  &:last-child
    border-bottom none
  .person-content
    display flex
    > img
      max-width 254px
      max-height 254px
    .person-intro
      flex 1 0 300px
      margin-right 15px
      .person-name
        color #125091
        font-size 18px
      .person-text
        margin-top 15px
        font-size 14px
        color #808080
        line-height 25px
  .person-attr
    margin-top 25px
    display flex
    flex-direction column
    .attr
      font-size 18px
      line-height 20px
      display flex
      min-height 40px
      align-items center
      .key
        min-width 90px
        display flex
        align-items center
        justify-content flex-start
        padding 0 5px 0 0
        font-weight 700
        white-space nowrap
        word-wrap normal
        color #999
      .value
        padding 10px
        font-size 16px
        color: #808080;
