.person-cards
  padding 30px 30px 30px 50px
  border-bottom solid #DDDDDD 1px
  position relative
  &:last-child
    border-bottom none
  .title
    color #125091
    font-size 18px
    margin-bottom 15px
  .person-content
    text-align center
    > img
      display inline
      max-width 344px
    .person-name
      margin-top 5px
      font-size 25px
    .person-text
      text-align left
      text-indent 28px
      margin-top 15px
      font-size 14px
      color #808080
      line-height 25px
  .person-attr
    margin-top 25px
    display flex
    flex-direction column
    .attr
      font-size 18px
      line-height 20px
      display flex
      min-height 30px
      align-items center
      white-space nowrap
      word-wrap normal
