.knowledge-cards
  height 100%
  position relative
  .tabs-part
    height 67px
    border-bottom solid #DDDDDD 1px
    display flex
    .tab
      flex 1 0 auto
      color #999999
      font-size 18px
      display flex
      align-items center
      justify-content center
      cursor pointer
      border-bottom solid white 3px
      &.chosen
        border-bottom solid #125091 3px
  .cards
    overflow-y scroll
    position absolute
    top 67px
    bottom 0
    left 0
    right 0
