.common-card
  min-height 265px
  padding 30px 30px 30px 50px
  border-bottom solid #DDDDDD 1px
  position relative
  transition height ease 750ms

  &.expand
    min-height auto

  .title
    color #125091
    font-size 18px

    &.exist
      margin-bottom 15px

  .content
    display flex
    align-items flex-start
    justify-content center

    .image
      width 210px
      height 160px
      display flex
      justify-content center
      align-items center

      > img
        max-height 160px
        max-width 210px

    .intro
      flex 1 0 300px
      margin-left 25px

      .name
        color #125091
        font-size 18px

      .text
        margin-top 15px
        font-size 14px
        color #808080
        overflow-y hidden
        height 120px
        line-height 25px

        &.truncated
          overflow-y auto
          height auto

  .list
    width 100%
    display flex
    justify-content flex-start
    flex-wrap wrap

    .item
      cursor pointer
      text-align center
      margin-bottom 50px

      > img
        display inline
        max-height 98px

      &.Person
        height 150px
        margin-right 15px

        > img
          display inline
          max-height 150px

      &.Product
        width 130px
        margin-right 30px

      &.store
        width 150px
        margin-right 30px

      .name
        margin-top 10px
        text-align center
        overflow hidden
        text-overflow ellipsis
        display -webkit-box
        -webkit-line-clamp 2
        -webkit-box-orient vertical

  .expand
    position absolute
    right 30px
    bottom 15px
    height 20px
    display flex
    align-items center
    font-size 14px
    color #4990e2
    cursor pointer

    > svg
      margin-right 5px
