.common-card
  height 205px
  padding 30px 30px 30px 50px
  border-bottom solid #DDDDDD 1px
  position relative
  transition height ease 750ms
  &.expand
    height auto
  .title
    color #125091
    font-size 18px
    &.exist
      margin-bottom 15px
  .content
    display flex
    > img
      width 154px
      height 154px
    .intro
      flex 1 0 300px
      margin-left 25px
      .name
        color #125091
        font-size 18px
      .text
        margin-top 15px
        font-size 14px
        color #808080
        overflow-y hidden
        height 120px
        line-height 25px
        &.truncated
          overflow-y auto
          height auto
  .list
    height 100%
    width 100%
    display flex
    justify-content flex-start
    flex-wrap wrap
    .item
      margin-bottom 42px
      > img
        height 98px
        width 98px
      &.Person
        width 98px
        height 98px
        margin-right 15px
      &.Product
        width 130px
        margin-right 30px
      &.store
        width 150px
        margin-right 30px
      .name
        margin-top 10px
        text-align center
        overflow: hidden;
        text-overflow ellipsis
        display -webkit-box
        -webkit-line-clamp 2
        -webkit-box-orient vertical
  .expand
    position absolute
    right 30px
    bottom 15px
    height 20px
    display flex
    align-items center
    font-size 14px
    color #4990e2
    cursor pointer
    > svg
      margin-right 5px
